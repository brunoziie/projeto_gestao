<h1>SPRINT #<%= @sprint.number %></h1>

<p><%= @sprint.status_humanize %> <%= "(Atrasada)" if @sprint.late?%></p>

<% if @sprint.scheduled? and policy(Project).edit? %>
  <p><%= link_to 'Iniciar Sprint', project_sprint_start_sprint_index_path(@project, @sprint), class: "button" %></p>
<% end %>

<% if @sprint.doing? and policy(Project).edit? %>
  <p><%= link_to 'Finalizar Sprint', project_sprint_finish_sprint_index_path(@project, @sprint), class: "button" %></p>
<% end %>

<% if policy(Project).edit? %>
  <p><%= link_to 'Apagar Sprint', project_sprint_path(@project, @sprint), method: :delete, data: { confirm: "VocÃª tem Certeza?"}, class: "button" %></p>
<% end %>

<% if policy(Project).edit? %>
  <p><%= link_to 'Criar Atividade', new_project_activity_path(@project, sprint_id: @sprint.id), class: "button" %></p>
<% end %>


<TABLE BORDER="3" WIDTH="50%" CELLPADDING="4" CELLSPACING="3">
   <TR>
      <TH COLSPAN="3"><BR><H2>ATIVIDADES</H2>
      </TH>
   </TR>
   <TR>
      <TH>TO DO</TH>
      <TH>DOING</TH>
      <TH>DONE</TH>
   </TR>
   <TR ALIGN="CENTER">
     <td>
       <table>
         <% @todo_activities.each do |activity| %>
           <tr ALIGN="CENTER">
             <td><%= link_to activity.name, project_activity_path(@project, activity) %></td>
           </tr>
         <% end %>
       </table>
    </td>
    <td>
      <table>
        <% @doing_activities.each do |activity| %>
          <tr ALIGN="CENTER">
            <td><%= link_to activity.name, project_activity_path(@project, activity) %></td>
          </tr>
        <% end %>
      </table>
    </td>
      <td>
        <table>
          <% @done_activities.each do |activity| %>
        <tr ALIGN="CENTER">
          <td><%= link_to activity.name, project_activity_path(@project, activity) %></td>
        </tr>
      <% end %>
        </table>
      </td>

   </TR>
</TABLE>
