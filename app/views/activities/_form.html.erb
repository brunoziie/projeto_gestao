<%= simple_form_for [@project, @activity] do |f| %>
  <%= f.input :sprint_id, :collection => @sprints, label_method: :sprint_name, value_method: :id, label: "Sprint", include_blank: "Atividade em Backlog" %>
    <%= f.input :name, placeholder: "Nome da Atividade" %>
    <%= f.input :description, placeholder: "Descrição da Atividade" %>
    <%= f.input :estimate, placeholder: "Estimativa em minutos" %>
    <%= f.button :submit, class: "success" %>
<% end %>

